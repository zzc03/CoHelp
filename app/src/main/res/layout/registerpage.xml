<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择头像"
            android:layout_marginTop="20dp"
            android:textSize="30sp" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/registerPageHead"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/registerPageAccount"
            android:layout_width="250dp"
            android:hint="自定义4-6位账号"
            android:layout_height="wrap_content"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/registerPageName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:hint="请输入昵称"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/registerPagePassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:hint="请输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/registerPageRepassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:hint="确认密码"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:hint="请输入学号以便证实你的身份"
        android:textSize="30sp"
        android:id="@+id/registerPagedesc"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/registerPageSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textSize="24sp" />

        <Button
            android:id="@+id/registerPageCancal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="取消"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>